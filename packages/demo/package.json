{
  "name": "cra-universal-demo",
  "version": "4.3.1",
  "private": true,
  "devDependencies": {
    "better-npm-run": "^0.1.1",
    "cra-universal": "^4.3.1",
    "prettier": "1.18.2",
    "react-scripts": "3.1.2"
  },
  "dependencies": {
    "@cra-express/core": "^4.3.1",
    "@cra-express/redux-prefetcher": "^4.3.1",
    "@cra-express/router-prefetcher": "^4.3.1",
    "basscss": "8.0.4",
    "font-awesome": "4.7.0",
    "react": "^16.10.0",
    "react-dom": "^16.10.0",
    "react-helmet-async": "0.1.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "crau:start": "better-npm-run crau:start",
    "crau:build": "better-npm-run crau:build",
    "crau:clean": "better-npm-run crau:clean",
    "start": "react-scripts start",
    "start:prod": "better-npm-run start:prod",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build:all": "cra-universal build",
    "prettier": "prettier --write \"{src,__{tests,mocks}__}/**/*.js\""
  },
  "betterScripts": {
    "start:prod": {
      "command": "node ./server/bundle",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "crau:start": {
      "command": "cra-universal start",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "crau:build": {
      "command": "cra-universal build",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "crau:clean": "cra-universal clean"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
